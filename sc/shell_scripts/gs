#!/opt/homebrew/bin/zsh

###################################################
##
## Usage: gitsync [option]
##
## Options:
## -h   ...help message
## -s   ...echo git status
## -c   ...add all and commit
## -p   ...add all commit and push
##
###################################################

help=0

      usage(){
	  echo "usage\n"
	  echo "-h    ---help message"
	  echo "-s    ---echo git status"
	  echo "-c    ---add and commit the commit message is after -c"
	  echo "-p    ---push"
      }


      status(){
	  cd ~/workspace/my_awesome_linux/
	  git status
	  }

      commit(){
	  status
	  git add .
	  git commit -m "regular commit"
      }

      push(){
	   status
	   git push
	   echo "all done !\n"
	   }

args=`getopt phscgaa: $*`
echo "The input args is:"
#echo $args
while true;do
      case "$1" in
        -h) usage;exit ;;
        -s) status;exit ;;
	-a) push;exit;;
        -c) shift;
	    #echo $#
	    if [ $# -gt 0 ]
	    then
		status
		#echo $@
		args_temp=$@
		echo "$args_temp"
		git add .
		git commit -m "$args_temp"
	    else
	#	echo $1
		commit;
	    fi
	    exit ;;
         -p) push;exit ;;
	  *) usage;exit 1;;
      esac
done




